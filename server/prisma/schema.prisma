// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["nativeTypes"]
}

model company {
  id          Int       @id @default(autoincrement())
  companyName String
  country     String
  address     String
  phone       String
  email       String    @unique
  password    String
  updated_at  DateTime? @default(now())
  posts       post[]
}

model post {
  id          Int         @id @default(autoincrement())
  title       String
  location    String
  description String
  date        String
  company     company?    @relation(fields: [companyId], references: [id])
  companyId   Int?
  applicant   applicant[]
}

model applicant {
  id       Int    @id @default(autoincrement())
  name     String
  lastname String
  email    String
  salary   Int
  details  String
  resume   Bytes
  post     post?  @relation(fields: [postId], references: [id])
  postId   Int?
}
